{
  "name": "menubar-helper",
  "version": "3.2.0",
  "description": "Simple menubar app to help open files in editor",
  "author": "Dmitri Kunin",
  "license": "MIT",
  "repository": "dkunin/menubar-helper",
  "main": "./src/main.js",
  "dependencies": {
    "create-dmg": "^7.0.0",
    "electron-config": "^2.0.0",
    "express": "^5.1.0",
    "open-in-editor": "^2.2.0"
  },
  "devDependencies": {
    "electron": "^37.3.0",
    "electron-packager": "^17.1.2",
    "eslint": "^8.57.0",
    "jest": "^30.0.5",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4"
  },
  "scripts": {
    "check-style": "eslint ./src",
    "pretty": "prettier './src/**/*.js' --single-quote --tab-width 4 --trailing-comma none --write",
    "test": "npm run pretty && npm run check-style && jest",
    "build": "rm -rf ./build/*darwin*; electron-packager . MenuBarHelper --out=./build --platform=darwin --arch=universal --icon=./assets/images/icon.icns --overwrite",
    "package": "create-dmg 'build/MenuBarHelper-darwin-universal/MenuBarHelper.app' && mv ./*.dmg ./build",
    "start": "electron ."
  }
}
